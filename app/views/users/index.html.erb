<h1 class="text-center mt-4">Alpha Bloggers</h1>
<div class="flickr_pagination d-flex justify-content-center">
  <%= will_paginate @users %>
</div>
<% @users.each do |user| %>
    <div class="row justify-content-md-center">
        <div class="card text-center shadow mb-5 rounded">
            <div class="card-header font-italic">
                <%= link_to user.username, user %>
            </div>

            <div class="card-body">
                <p class="card-text"><%=pluralize(user.articles.count, "article")%>
                <%= link_to "View profile", user, class: "btn btn-outline-success" %>
                <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
                </p>
            </div>

            <div class="card-footer">
                <small>Joined <%= time_ago_in_words(user.created_at) %></small>
            </div>
        </div>
    </div>
<% end %>
<div class="flickr_pagination d-flex justify-content-center mb-5">
  <%= will_paginate @users %>
</div>