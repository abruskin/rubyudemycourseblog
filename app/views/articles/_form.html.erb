
 



  <div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors' %>
  <%= form_with(model: article, class:"shadow p-3 mb-5 bg-white rounded", local:true) do |form| %>
    <div class="form-group-row">
  <div class="col-2">
    <%= form.label :title, class: "col-form-label" %>
    </div>
    <div class="col-10">
    <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group-row">
  <div class="col-2">
    <%= form.label :description, class: "col-form-label" %>
    </div>
    <div class="col-10">
    <%= form.textarea :description, rows:10, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.submit class:"btn btn-outline-primary"%>
  </div>

  

  
<% end %>
  <%= link_to "Back to articles", articles_path, class: "link-primary" %>

</div>
</div>
