<div class="container">
    <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shardow mb-5 rounded">
                <div class="card-header font-italic">
                    by <%= article.user.username if article.user %>
                </div>

                <div class="card-body">
                    <h3 class="card-title"><%= link_to article.title, article_path(article) %></h3>
                    <p class="card-text"><%= truncate(article.description, length: 100)%></p>
                    <%= link_to "View", article_path(article), class:"btn btn-outline-primary" %>
                    <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-secondary" %>
                    <%= link_to "Delete", article_path(article), class:"btn btn-outline-warning", method: :delete, data: {confirm: "Are you sure?"} %>
                </div>

                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago. </small>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>